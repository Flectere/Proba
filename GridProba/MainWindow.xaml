<Window x:Class="GridProba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GridProba"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF94ACAA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Текст блок"/>
        <TextBox Grid.Column="1" Grid.Row="0" Text="Текст бокс"/>
        <ComboBox Grid.Column="2" Grid.Row="0">
            <ComboBoxItem Content="Комобо бокс для выбора"/>
        </ComboBox>
        <Label Grid.Column="3" Grid.Row="0" Content="Для заголовков"/>
        <PasswordBox Grid.Row="0" Grid.Column="4"/>
    </Grid>
</Window>